{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "lib": ["DOM", "ESNext"],
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": "./",
    "paths": {
        "~/*": ["src/*"]
    }
  },
  "include": [
      "./src/**/*"
  ]
}
